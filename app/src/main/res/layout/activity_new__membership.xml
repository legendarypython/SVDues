<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/navdrawer">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:orientation="vertical"
            >

            <include
                android:id="@+id/tool_bar"
                layout="@layout/tool_bar"
                ></include>
            <ScrollView
android:layout_weight="1"                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >



                    <com.wrapp.floatlabelededittext.FloatLabeledEditText
                        android:layout_width="match_parent"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:layout_height="wrap_content"
                        float:fletPadding="5dp">
                        <AutoCompleteTextView
                            android:id="@+id/auto_membername"
                            android:layout_width="match_parent"
                            android:background="@drawable/box"
                            android:drawSelectorOnTop="true"
                            android:hint="Member Name"
                            android:drawableLeft="@drawable/users_name"
                            android:drawablePadding="18dp"
                            android:entries="@array/array_name"
                            android:layout_height="wrap_content"
                            android:singleLine="true"/>

                    </com.wrapp.floatlabelededittext.FloatLabeledEditText>
                    <Spinner

                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:drawSelectorOnTop="true"
                        android:entries="@array/choose_activity"
                        android:layout_marginTop="15dp"
                        android:id="@+id/sp_choose_activity"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#dfdfdf"/>

                    <Spinner

                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:id="@+id/sp_choose_membership_type"
                        android:layout_width="match_parent"
                        android:drawSelectorOnTop="true"
                        android:entries="@array/membership_type"
                         android:layout_marginTop="15dp"
                        android:layout_height="50dp"
                        android:background="#dfdfdf"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"
                        />





                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"

                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:weightSum="1">
                        <com.wrapp.floatlabelededittext.FloatLabeledEditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            float:fletPaddingBottom="5dp"
                            android:layout_weight="0.12">
                            <EditText
                                android:background="@drawable/box"
                                android:drawablePadding="18dp"
                                android:drawableLeft="@drawable/calendars"
                                android:id="@+id/et_newmembership_startdate"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:hint="Start Date"
                                android:inputType="date"
                                android:maxLength="10"
                                android:singleLine="true"
                                />
                        </com.wrapp.floatlabelededittext.FloatLabeledEditText>
                        <Button
                            android:id="@+id/bt_newmembership_datepicker"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="0.88"
                            android:background="@drawable/ic_action"
                            android:textAllCaps="false"
                            android:layout_marginTop="27dp"
                            android:layout_marginBottom="5dp"/>
                    </LinearLayout>
                    <LinearLayout

                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">
                        <com.wrapp.floatlabelededittext.FloatLabeledEditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            float:fletPaddingBottom="5dp"
                            >
                            <EditText
                                android:background="@drawable/box"
                                android:drawablePadding="18dp"
                                android:drawableLeft="@drawable/calendars"
                                android:id="@+id/et_newmembership_enddate"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:hint="End Date"
                                android:inputType="none"
                                android:maxLength="10"
                                android:singleLine="true"
                                />
                        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

                    </LinearLayout>


                    <LinearLayout

                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <com.wrapp.floatlabelededittext.FloatLabeledEditText
                            android:layout_width="wrap_content"
                            android:layout_weight="2"
                            android:layout_height="wrap_content"
                            float:fletPadding="5dp"
                            android:paddingRight = "5dp">

                            <EditText
                                android:id="@+id/et_newmembership_extracharges"
                                android:layout_width="wrap_content"

                                android:drawableLeft="@drawable/wallet"
                                android:background="@drawable/box"
                                android:drawablePadding="13dp"
                                android:hint="ExtraCharges"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:singleLine="true"
                                android:inputType="number" >

                                <requestFocus />
                            </EditText>
                        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

                        <com.wrapp.floatlabelededittext.FloatLabeledEditText
                            android:layout_width="wrap_content"
                            android:layout_weight="2"
                             android:paddingLeft="5dp"
                            android:layout_height="wrap_content"
                            float:fletPadding="5dp">

                            <EditText
                                android:id="@+id/et_newmembership_discount"
                                android:layout_width="wrap_content"
                                android:hint="Discount"
                                android:drawablePadding="18dp"
                                android:background="@drawable/box"
                                android:drawableLeft="@drawable/wallet"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:singleLine="true"
                                android:inputType="number" />
                        </com.wrapp.floatlabelededittext.FloatLabeledEditText>

                    </LinearLayout>


                    <com.wrapp.floatlabelededittext.FloatLabeledEditText
                        android:layout_width="wrap_content"

                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:layout_height="wrap_content"
                        float:fletPadding="5dp">

                        <EditText
                            android:id="@+id/et_newmembership_totalcharge"
                            android:layout_width="fill_parent"
                            android:hint="Total Charge"
                            android:background="@drawable/box"
                            android:drawableLeft="@drawable/wallet"
                            android:drawablePadding="18dp"
                            android:layout_height="wrap_content"

                           android:singleLine="true"
                            android:inputType="number"
                            android:ems="10"
                            />

                    </com.wrapp.floatlabelededittext.FloatLabeledEditText>


                    <ScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <LinearLayout

                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp" >


                        <ToggleButton
                            android:id="@+id/tb_newmembership_mon"
                            style="@style/myToggle"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/check_m"
                            android:textOn=""
                            android:layout_margin="2dp"
                            android:textOff=""
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:layout_centerVertical="true"/>/>

                        <ToggleButton
                            android:id="@+id/tb_newmembership_tue"
                            style="@style/myToggle"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/check_t"

                            android:textOn=""
                            android:layout_margin="2dp"
                            android:textOff=""
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:layout_centerVertical="true" />

                        <ToggleButton
                            android:id="@+id/tb_newmembership_wed"
                            style="@style/myToggle"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/check_w"
                            android:textOn=""
                            android:textOff=""
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:layout_centerVertical="true" />

                        <ToggleButton
                            android:id="@+id/tb_newmembership_thu"
                            style="@style/myToggle"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/check_t"
                            android:textOn=""
                            android:textOff=""
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:layout_centerVertical="true"/>

                        <ToggleButton
                            android:id="@+id/tb_newmembership_fri"
                            style="@style/myToggle"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/check_f"
                            android:textOn=""
                            android:textOff=""
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:layout_centerVertical="true" />

                        <ToggleButton

                            android:layout_margin="2dp"
                            android:id="@+id/tb_newmembership_sat"
                            style="@style/myToggle"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/check_sat"
                            android:textOn=""
                            android:textOff=""
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:layout_centerVertical="true" />

                        <ToggleButton
                            android:id="@+id/tb_newmembership_sun"
                            android:layout_margin="2dp"
                            style="@style/myToggle"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/check_sat"
                            android:textOn=""
                            android:textOff=""
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:layout_centerVertical="true"/>



                    </LinearLayout>
</ScrollView>
                </LinearLayout>
            </ScrollView>
            <LinearLayout
android:layout_weight="1"
android:layout_gravity="bottom"
                android:gravity="bottom"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <Button
                    android:id="@+id/b_newmembership_confirmmembership"
                    android:textAllCaps="false"
                    android:layout_width="fill_parent"
                    android:layout_gravity="bottom"
                    android:layout_height="wrap_content"
                    android:text="Confirm Membership" />

            </LinearLayout>
        </LinearLayout>

    </FrameLayout>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d0d0d0"
        android:layout_gravity = "left"
        android:id="@+id/listView1" />


</android.support.v4.widget.DrawerLayout>
