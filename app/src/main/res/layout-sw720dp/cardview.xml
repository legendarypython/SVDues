<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/navdrawer">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="200"
            android:orientation="vertical"
            >
            <include
                android:id="@+id/tool_bar"
                layout="@layout/tool_bar"
                ></include>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="160dp"
                android:orientation="horizontal"
                >
                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    float:fletPaddingBottom="10dp"
                    android:layout_marginLeft="7dp"

                    android:layout_marginRight="8dp"
                    android:layout_weight="1">
                    <AutoCompleteTextView
                        android:id="@+id/tvAttendance"
                        android:layout_width="fill_parent"
                        android:layout_gravity="center"
                        android:textSize="45dp"
                        android:layout_height="100dp"
                        android:drawableLeft="@drawable/user"
                        android:gravity="center"
                        android:background="@drawable/box"
                        android:hint="Mark Attendance"
                        android:drawSelectorOnTop="true"
                        android:entries="@array/array_name"
                        android:layout_marginRight="20dp"

                        android:layout_marginLeft="40dp"
                        />
                </com.wrapp.floatlabelededittext.FloatLabeledEditText>

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_marginRight="5dp"
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:background="@drawable/attendance"
                    android:layout_marginTop="0dp"
                    android:id="@+id/bMark"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="7dp"

                >
                <android.support.v7.widget.CardView
                    android:layout_width="320dp"
                    android:layout_height="320dp"
                    android:layout_gravity="left"
                    cardview:cardElevation="4dp"
                    cardview:cardCornerRadius="5dp"
                    android:layout_marginRight="15dp">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="320dp"
                        android:orientation="vertical"
                        >                     <!--!   <ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="130dp"
                            android:id="@+id/imageView"
                            android:scaleType="centerCrop"
                            android:src="@drawable/addmember"/>
                       --> <Button
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:textSize="45dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#333333"
                        android:text="Add Member"
                        android:id="@+id/bNew_members"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/buttonshape"
                        />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="320dp"
                    android:layout_height="320dp"
                    android:layout_gravity="left"
                    cardview:cardElevation="4dp"
                    cardview:cardCornerRadius="5dp">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="320dp"
                        android:orientation="vertical"
                        >
                        <!--<ImageView
                            android:layout_width="fill_parent"
                            android:layout_height="130dp"
                            android:id="@+id/imageView1"
                            android:scaleType="centerCrop"
                            android:src="@drawable/addmembership"/>
                        --><Button
                        android:textSize="45dp"

                        android:background="@drawable/buttonshape"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#333333"
                        android:text="Add Membership"
                        android:id="@+id/bNew_membership"
                        android:layout_gravity="center_horizontal"
                        />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:gravity="center"

                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="7dp">
                <android.support.v7.widget.CardView
                    android:layout_width="320dp"
                    android:layout_height="320dp"
                    android:layout_gravity="left"
                    cardview:cardElevation="4dp"
                    cardview:cardCornerRadius="5dp"
                    android:layout_marginRight="15dp">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="320dp"
                        android:orientation="vertical"
                        >
                        <!--      <ImageView
                                  android:layout_width="fill_parent"
                                  android:layout_height="130dp"
                                  android:id="@+id/imageView3"
                                  android:scaleType="centerCrop"
                                  android:src="@drawable/upcomingrenewal"/>
                            -->  <Button
                        android:background="@drawable/buttonshape"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="45dp"

                        android:textColor="#333333"
                        android:text="Upcoming Renewals"
                        android:id="@+id/bUpcoming_renew"

                        android:layout_gravity="center_horizontal"
                        />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="320dp"
                    android:layout_height="320dp"
                    android:layout_gravity="left"
                    cardview:cardElevation="4dp"
                    cardview:cardCornerRadius="5dp">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="320dp"
                        android:orientation="vertical"
                        >
                        <!--     <ImageView
                                 android:layout_width="fill_parent"
                                 android:layout_height="130dp"
                                 android:id="@+id/imageView4"
                                 android:scaleType="centerCrop"
                                 android:src="@drawable/allmembership"/>
                          -->   <Button
                        android:background="@drawable/buttonshape"
                        android:layout_width="fill_parent"
                        android:textSize="45dp"

                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#333333"
                        android:text="All Memberships"
                        android:id="@+id/bAll_memberships"
                        android:layout_gravity="center_horizontal"
                        />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent">
                <Button
                    android:layout_gravity="bottom"
                    android:id="@+id/bRenewMembership"
                    android:background="@drawable/buttonshape2"
                    android:layout_height="100dp"
                    android:layout_width="fill_parent"
                    android:text="Renew Membership"
                    android:textSize="45dp"
                    android:textAllCaps="false"
                    /></LinearLayout>
        </LinearLayout>


    </FrameLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d0d0d0"
        android:layout_gravity = "left"
        android:id="@+id/listView1" />
</android.support.v4.widget.DrawerLayout>